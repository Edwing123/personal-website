---
import BaseLayout from '@layouts/Base.astro'
import PostCard from '@components/PostCard.astro'

const props = {
    meta: {
        description: 'Edwin Garcia personal blog',
        keywords: 'Blog, Technology, Web, Development, Personal'
    },
    title: 'Edwing123 | Blog'
}
---

<BaseLayout {...props}>
    <h1>Posts</h1>

    <section class="posts">
        <PostCard
            title="Learning a programming language again"
            createdAt="September 7, 2022"
            url="/"
        />

        <PostCard
            title="Building relationships is important"
            createdAt="September 3, 2022"
            url="/"
        />

        <PostCard
            title="What does the university mean to me?"
            createdAt="August 29, 2022"
            url="/"
        />
    </section>
</BaseLayout>

<style>
    h1 {
        margin-bottom: 2rem;

        font-size: var(--font-size-3);
        color: var(--color-black-1);
    }

    :global([data-is='post']) {
        margin-bottom: 2rem;
    }
</style>
